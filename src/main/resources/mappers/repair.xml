<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.Gosk.GoskProject20221221.repository.RepairRepository">

    <insert id="repairSpecialReq" parameterType="java.util.List">
        insert into
            reserved_seat_mst(reserved_seat_id, user_id)
        values
        <foreach collection="list" item="item" separator=",">
                (
                #{item},
                -1
                )
        </foreach>

    </insert>

    <delete id="offRepairSpecial" parameterType="java.util.List">
        delete from
            reserved_seat_mst
        where
        <foreach collection="list" item="item" separator="or">
            (reserved_seat_id = #{item})

        </foreach>

    </delete>

    <insert id="repairBasicReq" parameterType="java.util.List">
        insert into
            seat_mst(seat_id, user_id)
        values
        <foreach collection="list" item="item" separator=",">
            (
            #{item},
            -1
            )
        </foreach>

    </insert>

    <delete id="offRepairBasic" parameterType="java.util.List">
        delete from
            seat_mst
        where
        <foreach collection="list" item="item" separator="or">
            (seat_id = #{item})

        </foreach>

    </delete>

</mapper>
